@model MvcPL.ViewModels.LoginAndRegistrationModel
@using (Html.BeginRouteForm("Registration",Model))
{
    @Html.AntiForgeryToken();
     <div class="form-horizontal">
         @Html.ValidationSummary(true, "", new {@class = "text-danger"})
         <div class="form-group">
             <div class="col-md-12">
                 @Html.EditorFor(model => Model.RegistrationModel.Email, new {htmlAttributes = new {@class = "form-control", @placeholder = "example@gmail.com"}})
                 @Html.ValidationMessageFor(model => Model.RegistrationModel.Email, "", new {@class = "text-danger"})
             </div>
         </div>
         <div class="form-group">
             <div class="col-md-12">
                 @Html.EditorFor(model => Model.RegistrationModel.FirstName, new {htmlAttributes = new {@class = "form-control", @placeholder = "first name"}})
                 @Html.ValidationMessageFor(model => Model.RegistrationModel.FirstName, "", new {@class = "text-danger"})
             </div>
         </div>
         <div class="form-group">
             <div class="col-md-12">
                 @Html.EditorFor(model => Model.RegistrationModel.LastName, new {htmlAttributes = new {@class = "form-control", @placeholder = "last name"}})
                 @Html.ValidationMessageFor(model => Model.RegistrationModel.LastName, "", new {@class = "text-danger"})
             </div>
         </div>
         <div class="form-group">
             <div class="col-md-12">
                 @Html.EditorFor(model => Model.RegistrationModel.Password, new {htmlAttributes = new {@class = "form-control", @placeholder = "password"}})
                 @Html.ValidationMessageFor(model => Model.RegistrationModel.Password, "", new {@class = "text-danger"})
             </div>
         </div>
         <div class="form-group">
             <div class="col-md-12">
                 @Html.EditorFor(model => Model.RegistrationModel.ConfirmPassword, new {htmlAttributes = new {@class = "form-control", @placeholder = "password confirm"}})
                 @Html.ValidationMessageFor(model => Model.RegistrationModel.ConfirmPassword, "", new {@class = "text-danger"})
             </div>
         </div>
         <div class="form-group">
             <div class="col-md-12">
                 @Html.TextBoxFor(model => Model.RegistrationModel.Birthday, "{0:d MMM yyyy}", new {@class = "form-control datepicker", @placeholder = "birthday"})
                 @Html.ValidationMessageFor(model => Model.RegistrationModel.Birthday, "", new {@class = "text-danger"})
             </div>
         </div>
         <div class="g-recaptcha" data-sitekey="6LdeCREUAAAAAPfaSZIH93osJiVyu9z7mSj93my0"></div>
         <div class="form-group">
             <div class="col-md-12">
                 <br/>
                 <button type="submit">Create</button>
             </div>
         </div>
         <p class="message" style="font-size: medium">
             Already registered? <a href="#">Sign in</a>
         </p>
     </div>
 }
